<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Matches</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Available Matches</h2>
    <% if (matches.length === 0) { %>
      <p>No matches available yet.</p>
    <% } %>
    <% matches.forEach(match => { %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= match.location %> â€” <%= new Date(match.date).toLocaleString() %></h5>
          <p class="card-text">Created by: <strong><%= match.creator.username %></strong></p>
          <p class="card-text">Players (<%= match.players.length %>/<%= match.maxPlayers %>):</p>
          <ul>
            <% match.players.forEach(player => { %>
              <li><%= player.username %></li>
            <% }) %>
          </ul>
          <p class="card-text"><%= match.notes || 'No additional notes.' %></p>
          <button class="btn btn-primary" onclick="window.location.href='/join-match/<%= match._id %>'">Join Match</button>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
